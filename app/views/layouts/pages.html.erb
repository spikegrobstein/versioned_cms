<!DOCTYPE html>
<html>
<head>
  <title><%= @project.name %> :: <%= @page.title %></title>

  <%= javascript_include_tag :defaults %>

	<%= stylesheet_link_tag 'bootstrap-1.0.0.min' %>
  <%= stylesheet_link_tag 'pages.css' %>

	<% unless @project.css.nil? %>

	<style type="text/css" media="screen">
		<%= raw(@project.css) %>
	</style>

	<% end %>
</head>
<body>
	
<div class="topbar">
	<div class="container fixed">
		<h3><a class="logo" href="/#{@project.slug}"><%= @project.name %></a></h3>

		<ul>
			<% @project.nav_items.primary.each do |nav_item| %>
			<li>
				<%= link_to nav_item.label, nav_item_url(nav_item) %>
			</li>
			<% end %>
		</ul>
		
		<ul class="nav secondary-nav">
			<% @project.nav_items.secondary.each do |nav_item| %>
			<li>
				<%= link_to nav_item.label, nav_item_url(nav_item) %>
			</li>
			<% end %>
		</ul>
	</div>
</div>

<div style="height: 60px;"><!-- --></div>

<div class="container">
	<h1><%= @page.title %></h1>
	<%= yield %>
	
	<div id="footer">
		<%= markdown @project.footer %>
	</div>
</div>

</body>
</html>
