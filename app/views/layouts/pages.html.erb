<!DOCTYPE html>
<html>
<head>
  <title><%= @project.name %> :: <%= @page.title %></title>

  <%= javascript_include_tag :defaults %>

	<% if @project.use_bootstrap_css? %>
	<%= stylesheet_link_tag 'bootstrap-1.0.0.min' %>
	<% end %>
	
  <%= stylesheet_link_tag 'pages.css' %>

	<% unless @project.css.nil? %>

	<style type="text/css" media="screen">
		<%= raw(@project.css) %>
	</style>

	<% end %>
</head>
<body>
	
<%= render :partial => '/layouts/pages/top_bar' %>

<div style="height: 60px;"><!-- --></div>

<div class="container">
	<div class="row">
		<div class="span4 columns">&nbsp;</div>
			<div class="span12 columns">
				
			<%= yield %>
	
			<div id="footer">
				<%= markdown @project.footer %>
			</div>
			
		</div>
	</div>
</div>

</body>
</html>
