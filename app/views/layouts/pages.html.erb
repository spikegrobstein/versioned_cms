<!DOCTYPE html>
<html>
<head>
  <title><%= @project.name %> :: <%= @page.title %></title>

  <%= javascript_include_tag :defaults %>

	<%= stylesheet_link_tag 'bootstrap-1.0.0.min' %>
  <%= stylesheet_link_tag 'pages.css' %>

	<% unless @project.css.nil? %>

	<style type="text/css" media="screen">
		<%= raw(@project.css) %>
	</style>

	<% end %>
</head>
<body>
	
<%= render :partial => '/layouts/top_bar' %>

<div style="height: 60px;"><!-- --></div>

<div class="container">
	<h1><%= @page.title %></h1>
	<%= yield %>
	
	<div id="footer">
		<%= markdown @project.footer %>
	</div>
</div>

</body>
</html>
