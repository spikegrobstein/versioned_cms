<!DOCTYPE html>
<html>
<head>
  <title>Sadistech Admin</title>
	<script src="/javascripts/ace/build/src/ace.js" type="text/javascript" charset="utf-8"></script>
	<%= javascript_include_tag 'jquery-1.6.2' %>
	<%= javascript_include_tag :defaults %>
	
	<%= stylesheet_link_tag 'bootstrap-1.0.0.min' %>
  <%= stylesheet_link_tag 'sadistech_admin' %>

  <%= csrf_meta_tag %>

	<%= yield :extra_head if @extra_head %>
</head>
<body>

<div class="topbar">
	<div class="container fixed">
		<h3><a class="logo" href="/">Sadistech Admin</a></h3>
		
		<% unless @project.nil? %>
		<ul class="nav">
			<li class="active">
				<%= link_to @project.name, project_path(@project) %>
			</li>
		</ul>
		<% end %>
		
		<ul class="nav secondary-nav">
			<li>
				<%= link_to 'sign out', destroy_user_session_path, :method => :delete %>
			</li>
		</ul>
	</div>
</div>

<div style="height: 60px;"><!-- --></div>

<% unless notice.nil? %>
<div class="row container">
	<div class="span16 column">
	<div id="flash_notice" class="alert-message success"><%= notice %></div>
</div>
<% end %>
<% unless alert.nil? %>
<div class="row container">
	<div class="span16 column">
	<div id="flash_notice" class="alert-message error"><%= alert %></div>
</div>
<% end %>

<div class="container">
	<%= yield %>
</div>

</body>
</html>
